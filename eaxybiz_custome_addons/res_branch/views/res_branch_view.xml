        <!--                        <search string="Branch">-->
        <!--                            <field name="name"/>-->
        <!--                            <field name="company"/>-->
        <!--                        </search>-->
        <!--                    </field>-->
        <!--                </record>-->

        <!--Action-->
        <record id="action_res_branch" model="ir.actions.act_window">
            <field name="name">Branch</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.branch</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create Your Branch here !...
                </p>
            </field>
        </record>

        <!--MenuItem-->
        <menuitem id="menu_res_branch_main"
                  name="Branch"
                  parent="base.menu_users"
                  action="action_res_branch"
                  sequence="4"/>


        <record id="res_users_form_customize_inherit" model="ir.ui.view">
            <field name="name">res.users.form.customize.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="branch_id" required="1" domain="[('company_id', '=', company_id)]"
                           options="{'no_create': True,'no_create_edit':True, 'no_open': True}"/>
                    <field name="allowed_branch_ids" required="1"
                           widget='many2many_tags'
                           options="{'no_create': True,'no_create_edit':True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>